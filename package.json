{
  "name": "@cultureamp/rich-text-toolkit",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/cultureamp/rich-text-toolkit.git"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "node": ">=16"
  },
  "type": "module",
  "main": "./dist/index.js",
  "files": [
    "dist/",
    "src/",
    "!**/*.spec.*"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "semi": false
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "lint": "yarn lint:prettier --write && yarn lint:eslint --fix",
    "lint-ci": "yarn lint:prettier --check && yarn lint:eslint --max-warnings=0",
    "lint:eslint": "eslint . --ext .ts,.tsx",
    "lint:prettier": "prettier '**/*' --loglevel=warn",
    "test": "jest",
    "version": "changeset version && yarn install --ignore-scripts",
    "release": "yarn build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.3",
    "@changesets/cli": "^2.21.0",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "jest": "^27.5.1",
    "jest-resolve": "^27.5.1",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  }
}
